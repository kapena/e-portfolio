{
    "paths": {
        "source":{
            "styles":"src/scss/main.scss",
            "js":[
                "bower_components/jquery/dist/jquery.min.js",
                "bower_components/letteringjs/jquery.lettering.js",
                "bower_components/Snap.svg/dist/snap.svg-min.js",
                "src/js/pages/*.js",
                "src/js/main.js"
            ]
        },
        "destination":{
            "styles":"site/css",
            "js":"site/js",
            "html":"site"
        },
       "watch":{
           "styles":"src/scss/**/*.scss",
           "js":"src/js/**/*.js",
           "html":"site/**/*.html"
       }
    }
}
